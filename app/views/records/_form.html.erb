
<%= simple_form_for(@record) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :artist %>
    <%= f.input :genre %>
    <%= f.input :description %>
    <%= f.input :text %>
    <%= f.input :condition %>
    <%= f.input :title %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
